@page "/Titulares"
@inject NavigationManager Navegador;
@inject AgregarTitularUseCase AgregarTitularUseCase
@inject ListarTitularesUseCase ListarTitularesUseCase
@inject EliminarTitularUseCase EliminarTitularUseCase

<PageTitle>Titulares</PageTitle>

<h2> Titulares </h2>
<div style="margin: 25px; margin-left: 0;">
    <span>Agregar Titular</span>

    <div>
        <input type="text"      placeholder="Nombre"       @bind="t.Nombre" style="max-width: 10%;" />
        <input type="text"      placeholder="Apellido"       @bind="t.Apellido" style="max-width: 10%;" />
        <input type="number"    placeholder="Dni"        @bind="t.Dni" style="max-width: 10%;" />    
        <input type="number"    placeholder="Telefono"   @bind="t.Telefono" style="max-width: 10%;" />
        <input type="text"      placeholder="Direccion"    @bind="t.Direccion" style="max-width: 10%;" />
        <input type="text"      placeholder="Correo"       @bind="t.Correo" style="max-width: 10%;" />
        <button @onclick="Agregar">Agregar</button>    
    </div>
</div>


@if (titulares == null)
{
    <p><em>Cargando titulares...</em></p>
}
else
{
    
    <span>Listado de Titulares</span>
    <DialogoConfirmacion @ref=dialogo />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dni</th>
                <th>Telefono</th>
                <th>Direccion</th>
                <th>Correo</th>  
                <th>Accion</th>              
            </tr>
        </thead>
        <tbody>
            @foreach (var t in titulares)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.Nombre</td>
                    <td>@t.Apellido</td>
                    <td>@t.Dni</td>
                    <td>@t.Telefono</td>
                    <td>@t.Direccion</td>
                    <td>@t.Correo</td>            
                    <td>
                        <button class="btn btn-primary">
                            <span class="oi oi-pencil"></span>
                        </button>
                        <button class="btn btn-danger" @onclick="()=>ConfirmarEliminacion(t)" >
                            <span class="oi oi-trash"></span>
                        </button>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
}







