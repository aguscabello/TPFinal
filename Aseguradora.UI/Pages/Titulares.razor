@page "/Titulares"
@inject NavigationManager Navegador;
@inject IJSRuntime JsRuntime;
@inject AgregarTitularUseCase AgregarTitularUseCase
@inject ListarTitularesUseCase ListarTitularesUseCase
@inject EliminarTitularUseCase EliminarTitularUseCase
@inject ObtenerTitularUseCase ObtenerTitularUseCase


 
@using Aseguradora.UI.Shared;  @*PREGUNTAR PORQUE ME TIRA EL DIALOGO WARNING*@

<PageTitle>Titulares</PageTitle>

<h2> Titulares </h2>
<div style="margin: 25px; margin-left: 0;">
    <span>Agregar Titular</span>

    <div>
        <input type="text"      placeholder="Nombre"       @bind="t.Nombre" style="max-width: 10%;" />
        <input type="text"      placeholder="Apellido"       @bind="t.Apellido" style="max-width: 10%;" />
        <input type="number"    placeholder="Dni"        @bind="t.Dni" style="max-width: 10%;" />    
        <input type="number"    placeholder="Telefono"   @bind="t.Telefono" style="max-width: 10%;" />
        <input type="text"      placeholder="Direccion"    @bind="t.Direccion" style="max-width: 10%;" />
        <input type="text"      placeholder="Correo"       @bind="t.Correo" style="max-width: 10%;" />
        <button @onclick="Agregar">Agregar</button>    
    </div>
</div>


@if (titulares == null)
{
    <p><em>Cargando titulares...</em></p>
}
else
{
    
    <span>Listado de Titulares</span>
    <DialogoConfirmacion @ref=dialogo />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dni</th>
                <th>Telefono</th>
                <th>Direccion</th>
                <th>Correo</th>  
                <th>Accion</th>              
            </tr>
        </thead>
        <tbody>
            @foreach (var t in titulares)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.Nombre</td>
                    <td>@t.Apellido</td>
                    <td>@t.Dni</td>
                    <td>@t.Telefono</td>
                    <td>@t.Direccion</td>
                    <td>@t.Correo</td>            
                    <td>
                        <button class="btn btn-primary">
                            <span class="oi oi-pencil" @onclick="()=>ModificarTitular(t)"></span>
                        </button>
                        <button class="btn btn-danger" @onclick="()=>ConfirmarEliminacion(t)" >
                            <span class="oi oi-trash"></span>
                        </button>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code 
{

     List<Titular> titulares = new List<Titular>();
    protected override void OnInitialized()
    {
         titulares = ListarTitularesUseCase.Ejecutar();
    }
    Titular t = new Titular();

    void Agregar()
    {
        if (t.Nombre != null && t.Apellido != null && t.Dni != 0 && t.Telefono != 0 && t.Direccion != null && t.Correo != null )
        {
            if (t.Dni != 0){
                var a = ObtenerTitularUseCase.Ejecutar(t.Dni);                
                if (a == null)                
                {            
                    
                    AgregarTitularUseCase.Ejecutar(t);            
                    Navegador.NavigateTo("titulares",true);
                    titulares = ListarTitularesUseCase.Ejecutar();
                }else{
                    Console.WriteLine("ya existe ese dni");
                }
            }   
        }
        //else
            //cartel debe completar datos
    }

    void ModificarTitular(Titular t)
    {
        Navegador.NavigateTo($"Titular/{t.Dni}");
    }
    DialogoConfirmacion dialogo = null!;    
    private void ConfirmarEliminacion(Titular titular)
    {        
        dialogo.Mensaje = $"Â¿Desea eliminar al cliente {titular.Nombre} {titular.Apellido}?";
        dialogo.OnConfirmado = EventCallback.Factory.Create(this, () => Eliminar(titular));   ///ME TIRA UN DIALOGO WARNING AUNQ ESTO ES LO QUE HACE LA TEORIA
        dialogo.Mostrar();
    }
    private void Eliminar(Titular t)
    {

        EliminarTitularUseCase.Ejecutar(t.Id);
        titulares = ListarTitularesUseCase.Ejecutar(); //se actualiza la lista de clientes

    }
}
  
        
